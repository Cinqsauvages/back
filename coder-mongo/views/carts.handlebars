<ol class="list-group list-group-numbered">
    {{#each @root.products }}
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">{{this.idProd.title}}</div>
            {{this.idProd.category}} - ${{this.idProd.price}}
        </div>
        <span class="badge bg-primary rounded-pill">{{this.quantity}}</span>
    </li>
    {{/each}}
</ol>